<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:layout_marginBottom="1dp"
              android:layout_height="64dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_note"
              android:maxLines="2"
              android:ellipsize="end"
              android:layout_marginStart="16dp"
              tools:text="吃饭\neat"/>

    <Space android:layout_width="0dp" android:layout_height="0dp"
           android:layout_weight="1"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
               android:id="@+id/iv_link"
               android:src="@drawable/ic_link_black_24dp"
               android:gravity="center"
               android:padding="10dp"
               android:text="@string/delete" tools:ignore="ContentDescription"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
               android:id="@+id/iv_delete"
               android:src="@drawable/ic_delete_sweep_black_24dp"
               android:gravity="center"
               android:padding="10dp"
               android:text="@string/delete" tools:ignore="ContentDescription"/>

</LinearLayout>